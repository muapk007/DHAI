                                        <th name="th_sm_si" class="text-center"><strong>Site Inspection</strong></th>
                                        <th name="th_sm_o" class="text-center"><strong>Ok</strong></th>
                                        <th name="th_sm_no" class="text-center"><strong>Not Ok</strong></th>
                                        <th name="th_sm_re" class="text-center"><strong>Remarks</strong></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr t-foreach="o.pole_lines" t-as="p_line">
                                        <td for="th_sm_si" class="text-center">
                                            <span t-field="p_line.site_ins"/>
                                        </td>
                                        <td for="th_sm_o" class="text-center">
<!--                                            <span t-field="p_line.is_ok"/>-->
                                            <t t-if="p_line.is_ok">
                                                <span>Yes</span>
                                            </t>
                                        </td>
                                        <td for="th_sm_no" class="text-center">
<!--                                            <span t-field="p_line.is_not_ok"/>-->
